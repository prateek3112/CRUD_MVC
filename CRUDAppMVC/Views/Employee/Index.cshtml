@model IEnumerable<CRUDAppMVC.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h4>Employee Register</h4>
<hr />
<p>
    <a asp-action="AddorEdit" class="btn btn-success"> <i class="far fa-plus-square"></i> Add Employee</a>
</p>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId"><i class="fa fa-marker"></i> Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId" class="text-light ml-1"><i class="fa fa-info "></i> Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId"  class="text-danger ml-1"><i class="fa fa-trash-alt "></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
